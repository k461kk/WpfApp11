<Window x:Class="WpfApp1.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Панель Администратора" Height="500" Width="315">
    <Grid>
        <ListBox x:Name="Adminlist" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,50,10,188" SelectionChanged="Adminlist_SelectionChanged"/>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Margin="71,421,0,0" VerticalAlignment="Top" Width="73" Click="Save_Click"/>
        <Button x:Name="Exit" Content="Выйти" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Click="Exit_Click"/>
        <Button x:Name="Del" Content="Удалить" HorizontalAlignment="Left" Margin="169,421,0,0" VerticalAlignment="Top" Width="73" Click="Del_Click"/>
        <TextBox x:Name="textbox_rol" HorizontalAlignment="Center" Margin="0,346,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Роль" HorizontalAlignment="Left" Margin="44,342,0,0" VerticalAlignment="Top" Width="53" FontFamily="Arial Black" FontSize="14"/>

    </Grid>
</Window>
